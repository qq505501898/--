<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x20"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20"
    android:paddingTop="@dimen/x20">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Image_back"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:src="@mipmap/ease_mm_title_back" />

        <TextView
            android:id="@+id/Text_ZhuCe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/x40" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="@dimen/x60"
        android:gravity="center_horizontal"
        android:text="欢迎你加入宠物寄养"
        android:textColor="#bebebe"
        android:textSize="@dimen/x50" />

    <EditText
        android:id="@+id/Edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/x30"
        android:hint="请输入手机号码"
        android:textColorHint="#c9c5c5" />

    <EditText
        android:id="@+id/Edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Edit_user"
        android:layout_marginTop="@dimen/x20"
        android:hint="请输入密码"
        android:textColorHint="#c9c5c5" />

    <Button
        android:id="@+id/Btn_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Edit_password"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/loginss"
        android:text="登  录"
        android:textColor="#ffffff"
        android:textSize="@dimen/x60" />

    <TextView
        android:id="@+id/Text_WangJi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Edit_password"
        android:layout_alignRight="@+id/Edit_password"
        android:layout_alignTop="@+id/Edit_password"
        android:layout_marginTop="@dimen/x30"
        android:text="忘记密码"
        android:textColor="#fff200" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Text_WangJi"
        android:layout_alignRight="@+id/Text_WangJi"
        android:layout_below="@+id/Btn_Login"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="@dimen/x200"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#756F67" />

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="使用第三方帐号登录"
            android:textColor="#b1aca5"
            android:textSize="@dimen/x30" />


        <View
            android:layout_width="@dimen/x200"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#756F67" />
    </LinearLayout>


    <ImageView
        android:id="@+id/Iamge_QQ"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_below="@+id/linearLayout"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/Text_WangJi"
        android:layout_toStartOf="@+id/Text_WangJi"
        android:src="@mipmap/login_qq" />

    <ImageView
        android:id="@+id/Iamge_WeiXin"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Iamge_QQ"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:src="@mipmap/login_weixin" />


</RelativeLayout>