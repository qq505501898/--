<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/Text_QuXiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="#fabc01"
        android:textSize="@dimen/x50" />

    <TextView
        android:id="@+id/Text_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Text_QuXiao"
        android:text="登录"
        android:textColor="#fabc01"
        android:textSize="@dimen/x50" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Text_Login"
        android:layout_marginTop="@dimen/x30"
        android:background="#b4b3b3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view"
        android:layout_marginTop="21dp"
        android:gravity="center_horizontal"
        android:text="欢迎您加入宠物寄养"
        android:textColor="#000000"
        android:textSize="@dimen/x50" />


    <EditText

        android:id="@+id/Edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="@dimen/x20"
        android:hint="请输入手机号" />

    <EditText
        android:id="@+id/Edit_YanZheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Edit_phone"
        android:layout_marginTop="@dimen/x20"
        android:hint="请输入验证码" />

    <EditText
        android:id="@+id/Edit_User1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Edit_YanZheng"
        android:layout_marginTop="@dimen/x20"
        android:hint="请输入用户名" />

    <EditText
        android:layout_below="@+id/Edit_User1"
        android:id="@+id/Edit_PassWord1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/x20"
        android:hint="设置6位数密码" />

    <TextView
        android:id="@+id/Text_HuoQu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Edit_phone"
        android:layout_alignRight="@+id/Edit_phone"
        android:layout_alignTop="@+id/Edit_phone"
        android:layout_marginTop="@dimen/x30"
        android:text="获取验证码"
        android:textColor="#00ff0d" />

    <Button
        android:id="@+id/Btn_Login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Text_HuoQu"
        android:layout_alignRight="@+id/Text_HuoQu"
        android:layout_below="@+id/Edit_PassWord1"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/loginss"
        android:text="注 册"
        android:textColor="#ffffff"
        android:textSize="@dimen/x60" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Btn_Login1"
        android:layout_marginTop="@dimen/x70"
        android:orientation="horizontal"
        android:weightSum="3">

        <View
            android:layout_width="@dimen/x200"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#756F67" />

        <TextView
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="使用第三方帐号登录"
            android:textColor="#b1aca5"
            android:textSize="@dimen/x30" />


        <View
            android:layout_width="@dimen/x200"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#756F67" />
    </LinearLayout>


    <ImageView
        android:layout_marginTop="@dimen/x100"
        android:id="@+id/Iamge_QQ1"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:src="@mipmap/login_qq"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/Text_QuXiao"
        android:layout_toEndOf="@+id/Text_QuXiao" />

    <ImageView
        android:layout_marginTop="@dimen/x100"
        android:id="@+id/Iamge_WeiXin1"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y200"
        android:src="@mipmap/login_weixin"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/Text_Login"
        android:layout_toStartOf="@+id/Text_Login" />
</RelativeLayout>